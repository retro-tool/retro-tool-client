---
apiVersion: v1
kind: Pod
metadata:
  name: <%= name %>-<%= deployment_id %>
  namespace: xing-retro
spec:
  restartPolicy: Never
  activeDeadlineSeconds: 600
  imagePullSecrets:
  - name: quay-pull-secret
  containers:
  - name: <%= name %>
    image: <%= "quay.dc.xing.com/xing-retro/xing-retro-client:#{tag}" %>
    args: <%= args %>
    envFrom: <%= partial "envFrom" %>
    resources:
      requests:
        cpu: "300m"
        memory: 512Mi
